<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#777</item>
        <item name="android:colorBackground">#464545</item>
        <item name="android:background">@color/colorAppBackground</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#333333</item>
    </style>

    <style name="MyTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#C1C2C3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MyEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">#E6E6E6</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">#aaaaaa</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">9dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
